<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SvaroChat</title>
  <!-- Link to Bootstrap CSS -->
  <link rel="stylesheet" href="/static/bootstrap/5.0.2/css/bootstrap.min.css">
  <!-- Add your custom styles here -->
  <% if (loggedIn) { %>
    <style>
      /* Custom styles for better message display */
      .message,
      .message-right {
        max-width: 70%;
        /* Adjust the percentage as needed */
        padding: 10px;
        /* Add padding for spacing */
        border-radius: 10px;
        /* Optional: Add rounded corners */
        margin-bottom: 10px;
        /* Optional: Add margin between messages */
      }

      .message .user,
      .message-right .user {
        font-weight: bold;
        color: #071d35;
        /* Blue color for user names */
      }

      .message {
        margin-right: auto;
        /* Align to the left */

      }

      .message-right {
        text-align: right;
        margin-left: auto;
        /* Align to the right */
      }
    </style>
    <% } %>
</head>

<body>
  <!-- Navbar -->
<nav class="navbar navbar-expand navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">SvaroChat</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <% if (loggedIn) { %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= user.Username %>
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="/profile">Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/logout">Logout</a></li>
          </ul>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/login">Login</a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>


  <!-- Main content -->
  <div class="container-fluid">
    <% if (loggedIn) { %>
      <div class="row">
        <!-- Left column for the list -->
        <div class="col-md-3">
          <h4>My chats</h4>
          <ul class="list-group" id="userList">
            <% for (const chat of user.chats) { %>
            <li class="list-group-item">
              <a href="?chatId=<%= chat.Id %>" class="user-link">
                <%= chat.Title %>
                <span class="badge bg-primary float-end">3</span>
              </a>
            </li>
              <% } %>
            <!-- Add more users as needed -->
          </ul>
        </div>

        <!-- Right column for the chat -->
        <div class="col-md-9">
          <h4>Chat</h4>
          <div id="chat" class="mt-5">
            <!-- Example dummy messages -->
            <div class="message bg-light">
              <span class="user">User 1:</span><br>
              Hi there!
            </div>
            <div class="message-right bg-primary">
              <span class="user">User 2:</span><br>
              Hello! How are you?
            </div>
            <!-- Add more messages as needed -->
          </div>

          <!-- Message input and send button -->
          <div class="input-group mt-3">
            <input id="message" type="text" class="form-control" placeholder="Message">
            <div class="input-group-append">
              <button id="send" class="btn btn-primary">Send</button>
            </div>
          </div>
        </div>
      </div>
      <% } else { %>
        <div>
          <p>You need to be logged in to use this chat app.</p>
        </div>
        <% } %>
  </div>

  <!-- Bootstrap JS and custom scripts -->
  <script src="/static/jquery/3.7.1/jquery.min.js"></script>
  <script src="/static/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
  <% if (loggedIn) { %>
    <script src="ws_client.js"></script>
    <% } %>
</body>

</html>